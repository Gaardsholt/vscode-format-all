{
  "name": "format-all",
  "displayName": "Format All",
  "description": "Format all files in your workspace with a single command, respecting your .gitignore files and custom ignore settings.",
  "version": "0.0.1",
  "publisher": "Gaardsholt",
  "repository": {
    "type": "git",
    "url": "https://github.com/Gaardsholt/vscode-format-all"
  },
  "icon": "resources/images/icon.png",
  "homepage": "https://github.com/Gaardsholt/vscode-format-all/blob/master/README.md",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/Gaardsholt/vscode-format-all/issues"
  },
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "activationEvents": [
    "onCommand:format-all.formatAllFiles"
  ],
  "main": "./dist/extension.js",
  "browser": "./dist/extension.js",
  "extensionKind": [
    "workspace",
    "ui"
  ],
  "contributes": {
    "commands": [
      {
        "command": "format-all.formatAllFiles",
        "title": "Format All Files in Workspace"
      }
    ],
    "configuration": {
      "title": "Format All",
      "properties": {
        "format-all.ignore": {
          "type": "array",
          "default": [],
          "description": "An array of glob patterns to ignore when formatting files."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "vsce package --no-dependencies",
    "deploy": "vsce publish",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.1",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^9.34.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "ignore": "^7.0.5"
  }
}
